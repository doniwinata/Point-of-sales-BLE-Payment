<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.doni.pos.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/input_ammount"
        android:text="1000"
        android:layout_alignBaseline="@+id/checkout_button"
        android:layout_alignBottom="@+id/checkout_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Connected Device:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/connected_device"
        android:layout_below="@+id/checkout_button"
        android:layout_alignStart="@+id/input_ammount" />

    <TextView
        android:text="Logs:"
        android:layout_width="match_parent"
        android:maxLines = "2000"
        android:scrollbars = "vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:id="@+id/log_view"
        android:layout_below="@+id/connected_device"
        android:layout_alignStart="@+id/connected_device" />

    <Button
        android:text="Start POS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_pos"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Stop POS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stop_pos"
        android:layout_below="@+id/start_pos"
        android:layout_alignStart="@+id/input_ammount"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Checkout!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkout_button"
        android:layout_below="@+id/stop_pos"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
